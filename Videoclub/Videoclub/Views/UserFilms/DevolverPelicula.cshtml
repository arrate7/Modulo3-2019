@model Videoclub.Models.UserFilm

@{
    ViewData["Title"] = "DevolverPelicula";
}

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Película alquilada
        </dt>
        <dd class="col-sm-10">
            @Model.Film.Titulo
        </dd>
        <dt class="col-sm-2">
            Fecha alquiler
        </dt>
        <dd class="col-sm-10">
            @Model.DateRented
        </dd>
        <dt class="col-sm-2">
           Imagen
        </dt>
        <dd class="col-sm-10">
           <img src=" @Model.Film.Imagen" alt="@Model.Film.Titulo"/>
        </dd>

    </dl>
</div>
<div>
    <a asp-controller="UserFilms" asp-action="ConfirmarDevolucion" asp-route-id="@Model.Id">Confirmar devolución</a> |
    <a asp-action="Index">Back to List</a>
</div>
