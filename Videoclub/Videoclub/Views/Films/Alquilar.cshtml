@model Videoclub.Models.Film

@{
    ViewData["Title"] = "Alquilar";
}


<div>
    <h4>@Model.Titulo</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Sinopsis:
        </dt>
        <dd class = "col-sm-10">
            @Model.Sinospsis
        </dd>
        <dt class = "col-sm-2">
           Género
        </dt>
        <dd class = "col-sm-10">
            @Model.Genero
        </dd>
        <dt class = "col-sm-2">
            Imagen
        </dt>
        <dd class = "col-sm-10">
            <img src="@Model.Imagen" alt="@Model.Titulo" />
        </dd>
    </dl>
</div>
<div>
    <a asp-controller="UserFilms"  asp-action="ConfirmarAlquiler" asp-route-id="@Model.Id">Confirmar alquiler</a> |
    <a asp-action="Index">Back to List</a>
</div>
