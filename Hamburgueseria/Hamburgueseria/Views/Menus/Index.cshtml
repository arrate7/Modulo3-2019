@model Hamburgueseria.Models.ViewModels.CrearMenusVM

@{
    ViewData["Title"] = "Index";
}

<h1>Hamburguesas</h1>
<form asp-controller="Menus" asp-action="EleccionMenu">
<div class="row">

@foreach (Principal hamburguesa in Model.Principales)
{

    <div class="card" style="width: 18rem;">
        <img src="@hamburguesa.Imagen" class="card-img-top" alt="@hamburguesa.Nombre">
        <div class="card-body">
            <h5 class="card-title">@hamburguesa.Nombre</h5>
            <p class="card-text">@hamburguesa.Nombre</p>
            <p class="card-text">@hamburguesa.Ingredientes</p>
        </div>
        <div class="card-body">
            <input asp-for="Menu.PrincipalId" type="radio"  value="@hamburguesa.Id" />
        </div>
    </div>
}
</div>
<h1>Entrantes</h1>
<div class="row">

@foreach (Entrante entrante in Model.Entrantes)
{

    <div class="card" style="width: 18rem;">
        <img src="@entrante.Imagen" class="card-img-top" alt="@entrante.Nombre">
        <div class="card-body">
            <h5 class="card-title">@entrante.Nombre</h5>
            <p class="card-text">@entrante.Nombre</p>
            <p class="card-text">@entrante.Ingredientes</p>
        </div>
        <div class="card-body">
            <input asp-for="Menu.EntranteId" type="radio"  value="@entrante.Id" />
        </div>
    </div>
}
</div>
<h1>Postres</h1>
<div class="row">

@foreach (Postre postre in Model.Postres)
{

    <div class="card" style="width: 18rem;">
        <img src="@postre.Imagen" class="card-img-top" alt="@postre.Nombre">
        <div class="card-body">
            <h5 class="card-title">@postre.Nombre</h5>
            <p class="card-text">@postre.Nombre</p>
            <p class="card-text">@postre.Ingredientes</p>
        </div>
        <div class="card-body">
            <input asp-for="Menu.PostreId" type="radio"  value="@postre.Id" />
        </div>
    </div>
}
</div>
    <input type="submit" value="Crear Menú"/>
</form>