@model Hamburgueseria.Models.Menu

@{
    ViewData["Title"] = "EleccionMenu";
}

    <form asp-controller="Menus" asp-action="ConfirmarMenu">
<div>
    <h4>Menu</h4>
    <hr />
    <dl class="row">
        @if(Model.Principal != null)
        {

        <dt class="col-sm-2">
        <input type="hidden" value="@Model.Principal.Id" asp-for="PrincipalId" />
            Hamburguesa
        </dt>
        <dd class="col-sm-10">
            @Model.Principal.Nombre
        </dd>
        <dt class="col-sm-2">
            Imagen Hamburguesa
        </dt>
        <dd class="col-sm-10">
            <img src=" @Model.Principal.Imagen" alt="@Model.Principal.Nombre" />
        </dd>
        }
        @if(Model.Entrante != null)
        {

        <dt class="col-sm-2">
        <input type="hidden" value="@Model.Entrante.Id" asp-for="EntranteId" />
            Entrante
        </dt>
        <dd class="col-sm-10">
            @Model.Entrante.Nombre
        </dd>
        <dt class="col-sm-2">
            Imagen Entrante
        </dt>
        <dd class="col-sm-10">
            <img src=" @Model.Entrante.Imagen" alt="@Model.Entrante.Nombre" />
        </dd>
        }
        @if(Model.Postre != null)
        {

        <dt class="col-sm-2">
        <input type="hidden" value="@Model.Postre.Id" asp-for="PostreId"/>
            Postre
        </dt>
        <dd class="col-sm-10">
            @Model.Postre.Nombre
        </dd>
        <dt class="col-sm-2">
            Imagen Postre
        </dt>
        <dd class="col-sm-10">
            @Model.Principal.Nombre
        </dd>
        <dt class="col-sm-2">
            Imagen Postre
        </dt>
        <dd class="col-sm-10">
            <img src=" @Model.Postre.Imagen" alt="@Model.Postre.Nombre" />
        </dd>
        }
        <dt class="col-sm-2">
           Precio Total
        </dt>
        <dd class="col-sm-10">
           @Model.PrecioTotal
        </dd>
    </dl>
</div>
<div>
        <input type="hidden" value="@Model.PrecioTotal" asp-for="PrecioTotal"/>
        <input type="hidden" value="@Model.Fecha" asp-for="Fecha"/>
        <input type="submit" value="Confirmar Menú" />

    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

    </form>